{
  "compilerOptions": {
    "target": "es2017",
    "jsx": "react-jsx",
    "experimentalDecorators": true,
    "baseUrl": ".",
    "rootDir": ".",
    "module": "commonjs",
    "moduleResolution": "node",
    "paths": {
      "@/components/*": [
        "./src/components/*"
      ],
      "@/store/*": [
        "./src/store/*"
      ],
      "#docs/*": [
        "../../website/pages/docs/*"
      ],
      "#/*": [
        "../../website/*"
      ],
      "~/*": [
        "../../../packages/ui/*"
      ]
    },
    "resolveJsonModule": true,
    "typeRoots": [
      "node_modules/@types"
    ],
    "strictNullChecks": true,
    "preserveConstEnums": true,
    "removeComments": false,
    "noImplicitAny": false,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "outDir": "lib",
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "allowJs": true
  },
  "include": [
    "./src",
    "./types",
    "./env.d.ts"
  ],
  "compileOnSave": false
}
