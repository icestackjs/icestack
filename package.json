{
  "name": "pnpm-turbo-monorepo-template",
  "version": "0.0.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "turbo run build -F=./packages/*",
    "dev": "turbo run dev --parallel",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "test": "vitest run",
    "release": "turbo run release",
    "publish-packages": "turbo run build lint test && changeset version && changeset publish",
    "preinstall": "npx only-allow pnpm"
  },
  "devDependencies": {
    "@babel/generator": "^7.22.10",
    "@babel/parser": "^7.22.14",
    "@babel/traverse": "^7.22.11",
    "@babel/types": "^7.22.11",
    "@changesets/changelog-github": "^0.4.8",
    "@changesets/cli": "^2.26.2",
    "@csstools/postcss-cascade-layers": "^4.0.0",
    "@linaria/babel-preset": "^4.5.4",
    "@linaria/core": "^4.5.4",
    "@linaria/react": "^4.5.4",
    "@linaria/vite": "^4.5.4",
    "@linaria/webpack-loader": "^4.5.4",
    "@pandacss/config": "^0.13.1",
    "@pandacss/dev": "^0.13.1",
    "@types/babel__generator": "^7.6.4",
    "@types/babel__traverse": "^7.20.1",
    "@types/klaw": "^3.0.3",
    "@types/postcss-js": "^4.0.1",
    "@vitest/coverage-v8": "^0.34.3",
    "chokidar": "^3.5.3",
    "clsx": "^2.0.0",
    "defu": "^6.1.2",
    "eslint": "^8.48.0",
    "eslint-config-icebreaker": "^1.2.2",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "klaw": "^4.1.0",
    "only-allow": "^1.1.1",
    "polished": "^4.2.2",
    "postcss": "^8.4.29",
    "postcss-js": "^4.0.1",
    "postcss-load-config": "^4.0.1",
    "prettier": "^3.0.3",
    "sass": "^1.66.1",
    "tailwind-css-variables-theme-generator": "^0.4.0",
    "tailwindcss": "^3.3.3",
    "ts-node": "^10.9.1",
    "turbo": "^1.10.13",
    "typescript": "^5.2.2",
    "unbuild": "^2.0.0",
    "vitest": "^0.34.3",
    "weapp-pandacss": "^1.3.2"
  },
  "engines": {
    "node": ">=14.0.0"
  },
  "packageManager": "pnpm@8.6.7"
}