{
  "name": "@icestack/ui",
  "version": "0.0.0",
  "description": "",
  "license": "MIT",
  "sideEffects": false,
  "type": "commonjs",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.cjs"
    },
    "./tailwindcss": {
      "types": "./dist/tailwindcss.d.ts",
      "import": "./dist/tailwindcss.mjs",
      "require": "./dist/tailwindcss.cjs"
    },
    "./scss/*": "./assets/scss/*",
    "./css/*": "./assets/css/*",
    "./js/*": "./assets/js/*",
    "./plugins/*": "./assets/plugins/*",
    "./*": "./*"
  },
  "typesVersions": {
    "*": {
      "*": [
        "./dist/*",
        "./dist/index.d.ts"
      ]
    }
  },
  "main": "./dist/index.cjs",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "files": [
    "dist",
    "assets"
  ],
  "scripts": {
    "build": "npm run clean && npm run build:base && npm run build:utilities && npm run build:components && npm run build:plugin",
    "build:plugin": "unbuild",
    "_build:plugin": "unbuild",
    "clean": "del assets/{css,js,plugins}",
    "dev": "unbuild --watch",
    "lint": "eslint --cache --ext .ts,.js,.mjs,.cjs . && prettier -c src test",
    "lint:fix": "eslint --cache --ext .ts,.js,.mjs,.cjs . --fix && prettier -c src test -w",
    "prepack": "pnpm run build",
    "release": "pnpm test && changelogen --release && npm publish && git push --follow-tags",
    "test": "vitest run",
    "test:dev": "vitest",
    "build:scss": "ts-node --esm scripts/build-scss.ts",
    "build:base": "ts-node --esm scripts/build-scss.ts base",
    "build:utilities": "ts-node --esm scripts/build-scss.ts utilities",
    "build:components": "ts-node --esm scripts/build-scss.ts components",
    "raw": "ts-node --esm scripts/colors.ts",
    "tailwind-config-viewer": "tailwind-config-viewer -o"
  },
  "keywords": [],
  "author": "",
  "dependencies": {
    "@ctrl/tinycolor": "^4.0.2",
    "@icestack/css2js": "workspace:^",
    "compose-tailwindcss-plugins": "workspace:^",
    "css-to-tailwindcss-plugin": "workspace:^",
    "immutable": "^4.0.0",
    "postcss": "^8.4.31",
    "postcss-custom-property-prefixer": "workspace:^",
    "sass": "^1.69.3",
    "tailwindcss": "^3.3.3"
  },
  "devDependencies": {
    "merge": "^2.1.1",
    "sass-true": "^7.0.0"
  }
}